@{
    Layout = null;
}

@model WebApplication14.Models.Assignments
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homework Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h1 class="text-2xl font-bold mb-6 text-center">Upload Assignment</h1>
        <form method="post" enctype="multipart/form-data" asp-controller="Assignments" asp-action="Upload">
            <div class="mb-4">
                <label class="block text-gray-700 font-semibold mb-2">Upload File</label>
                <input class="w-full p-2 border border-gray-300 rounded-lg" name="file" type="file" />
            </div>

            <div class="mb-4">
                <label asp-for="ClassesId" class="block text-gray-700 font-semibold mb-2"></label>
                <input asp-for="ClassesId" class="w-full p-2 border border-gray-300 rounded-lg" />
            </div>

            <div class="mb-4">
                <label asp-for="Title" class="block text-gray-700 font-semibold mb-2"></label>
                <input asp-for="Title" class="w-full p-2 border border-gray-300 rounded-lg" />
                <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="DueData" class="block text-gray-700 font-semibold mb-2"></label>
                <input asp-for="DueData" class="w-full p-2 border border-gray-300 rounded-lg" />
                <span asp-validation-for="DueData" class="text-red-500 text-sm"></span>
            </div>

            <div class="mt-6">
                <button  type="submit" class="w-full bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700">
                    Upload
                </button>
            </div>
        </form>
    </div>
</div>
