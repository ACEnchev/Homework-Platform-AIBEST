@model IEnumerable<WebApplication14.Models.Teacher>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homework Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-6">Students</h1>
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-300 rounded-lg">
            <thead>
                <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                    <th class="py-3 px-6 text-left">@Html.DisplayNameFor(u => u.TeacherId)</th>
                    <th class="py-3 px-6 text-left">@Html.DisplayNameFor(u => u.user.FirstName)</th>
                    <th class="py-3 px-6 text-left">@Html.DisplayNameFor(u => u.user.LastName)</th>
                    <th class="py-3 px-6 text-left">@Html.DisplayNameFor(u => u.user.Email)</th>
                    
                    <th class="py-3 px-6 text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
                @foreach (var item in Model)
                {
                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                        <td class="py-3 px-6 text-left whitespace-nowrap">
                            <span class="font-medium">@item.TeacherId</span>
                        </td>
                        <td class="py-3 px-6 text-left">
                            <span>@item.user.FirstName</span>
                        </td>
                        <td class="py-3 px-6 text-left">
                            <span>@item.user.LastName</span>
                        </td>
                        <td class="py-3 px-6 text-left">
                            <span>@item.user.Email</span>
                        </td>
                        
                        <td class="py-3 px-6 text-center">
                            
                            <a asp-action="RemoveTeacher" asp-controller="Classes" asp-route-id="@item.UserId">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
