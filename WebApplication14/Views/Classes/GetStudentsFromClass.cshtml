@{
}
@model IEnumerable<WebApplication14.Models.Student>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(u => u.StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(u => u.user.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(u => u.user.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(u => u.user.Email)
            </th>
            <th>
                @Html.DisplayNameFor(u => u.PhoneNumber)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    <h2>@item.StudentId</h2>
                </td>
                <td>
                    <h2>@item.PhoneNumber</h2>
                </td>
                <td>
                    <h2>@item.user.FirstName</h2>
                </td>
                <td>
                    <h2>@item.user.LastName</h2>
                </td>
                <td>
                    <h2>@item.user.Email</h2>
                </td>
                <td>
                    <a asp-action="CheckGrade" asp-controller="Grades" asp-route-id="@item.StudentId">Check Grades</a>
                </td>
            </tr>
        }
    </tbody>
</table>